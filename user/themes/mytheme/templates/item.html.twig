{% embed 'partials/base.html.twig' %}

	{% block content %}
		{% if config.plugins.breadcrumbs.enabled %}
			{% include 'partials/breadcrumbs.html.twig' %}
		{% endif %}
		
		<div class="blog-content-item grid pure-g-r">
			<div id="item" class="block pure-u-2-3 h-entry">
			    {% include 'partials/blog_item.html.twig' with {'blog':page.parent, 'truncate':false} %}
			</div>
			<div id="sidebar" class="block size-1-3 pure-u-1-3">
				{% include 'partials/sidebar.html.twig' with {'blog':page.parent}%}
			</div>
		</div>

		{% if page.header.has_related == true %}
			<div class="container related-posts-container">
				<div class="row">
					<h2>{{ 'SIDEBAR.RELATED_POSTS.HEADLINE'|t }}</h2>
					<div class="row w-100">
						{% for p in page.collection %}
							<div class="col-12 col-md-6 related-post-container">
								<div class="related-post-container-inner">
									<h2>{{ p.title }}</h2>
									<p><a href="{{ p.url }}">{{ 'BLOG.ITEM.CONTINUE_READING'|t }}</a></p>
								</div>
							</div>
						{% endfor %}
					</div>
					</div>
				</div>
		{% endif %}

	{% endblock %}

{% endembed %}
