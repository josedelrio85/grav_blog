  <div class="container-fluid logo-footer-row d-lg-none p-0 px-2">
    <div class="container">
          <div class="footer-logo-square">
            <img class="w-100" srcset="{{ url('theme://img/logo_virgin_telco_white.png') }}">
          </div>
    </div>
  </div>
  <div class="container-fluid footer-main">
    <div class="container text-center p-0">
