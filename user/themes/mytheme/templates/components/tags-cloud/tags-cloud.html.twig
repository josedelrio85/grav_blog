<div class="container-fluid tags-cloud text-secondary font-weight-bold text-center p-3">
  <div class="row">
    <div class="col-12">
      {% for element in data.tags %}
        <a href="{{ element.link }}" style="color: white !important;">{{ element.text }}</a>
        {% if loop.index	 < data.tags|length %}
          <span style="color: white !important; margin-left: 5px; margin-right: 5px;"> · · · </span>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>